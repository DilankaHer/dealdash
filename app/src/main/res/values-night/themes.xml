<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DealDash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/font_colour</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_window</item>
        <item name="materialButtonStyle">@style/CustomMaterialButtonStyle</item>
        <item name="android:textColor">@color/font_colour</item>
        <item name="tabTextColor">@color/font_colour</item>
        <item name="android:textColorSecondary">@color/tab_colour</item>
        <item name="colorControlActivated">@color/tab_colour</item>
        <item name="android:textColorPrimary">@color/font_colour</item>
        <item name="alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorHint">@color/font_colour_hint</item>
    </style>

    <style name="CustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_colour</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="background">@color/button_colour</item>
        <item name="backgroundTint">@color/button_colour</item>
        <item name="textFillColor">@color/font_colour</item>
        <item name="colorOnPrimary">@color/tab_colour</item>
        <item name="colorOnSecondary">@color/button_colour</item>
        <item name="colorSecondary">@color/button_colour</item>
        <item name="android:windowBackground">@color/background_window</item>
    </style>

    <style name="MenuItemStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextColor">@color/font_colour</item>
        <item name="android:background">@color/background_window</item>
        <item name="itemTextAppearance">@style/CustomAppearance</item>
        <item name="itemShapeFillColor">@color/button_colour</item>
        <!--        <item name="android:background">@drawable/menu_item_selector</item>-->
    </style>

    <style name="CustomAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.DealDash.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DealDash.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DealDash.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>